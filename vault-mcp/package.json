{
  "name": "@fredko/vault-mcp-server",
  "version": "1.0.9",
  "description": "Model Context Protocol server for HashiCorp Vault integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vault-mcp-server": "dist/index.js"
  },
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "vault",
    "hashicorp",
    "secrets",
    "model context protocol",
    "vault integration",
    "secret management",
    "hashicorp vault",
    "ai tools",
    "cursor ai",
    "vault client",
    "typescript",
    "nodejs"
  ],
  "author": "FredKo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fred-Ko/-Fredko/tree/master/vault-mcp"
  },
  "homepage": "https://github.com/Fred-Ko/-Fredko/tree/master/vault-mcp#readme",
  "bugs": {
    "url": "https://github.com/Fred-Ko/-Fredko/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0",
    "node-vault": "^0.10.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
