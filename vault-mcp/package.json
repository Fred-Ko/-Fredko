{
  "name": "@fredko/vault-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for HashiCorp Vault integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vault-mcp-server": "dist/index.js"
  },
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "vault",
    "hashicorp",
    "secrets",
    "model context protocol",
    "vault integration",
    "secret management",
    "hashicorp vault",
    "ai tools",
    "cursor ai",
    "vault client",
    "typescript",
    "nodejs"
  ],
  "author": "FredKo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/junhoko/vault-mcp.git"
  },
  "homepage": "https://github.com/junhoko/vault-mcp#readme",
  "bugs": {
    "url": "https://github.com/junhoko/vault-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "node-vault": "^0.10.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
