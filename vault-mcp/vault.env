# Vault MCP Server 환경 변수
# docker-compose up 후 이 파일을 사용하세요: source vault.env

# Vault 서버 설정
export VAULT_ADDR=http://localhost:8200
export VAULT_TOKEN=myroot

# MCP 서버 권한 설정
export VAULT_ALLOW_READ=true
export VAULT_ALLOW_WRITE=true

# 로깅 설정
export LOG_LEVEL=DEBUG

# 선택사항: 허용된 경로 제한 (개발용으로는 주석 처리)
# export VAULT_ALLOWED_PATHS=secret/data/app1,secret/data/app2

# 선택사항: 작업 디렉토리 제한 (개발용으로는 주석 처리)
# export VAULT_ALLOWED_WORKING_DIR=/tmp

echo "Vault MCP Server 환경 변수가 설정되었습니다."
echo "Vault 주소: $VAULT_ADDR"
echo "Vault 토큰: $VAULT_TOKEN"
echo "읽기 권한: $VAULT_ALLOW_READ"
echo "쓰기 권한: $VAULT_ALLOW_WRITE"